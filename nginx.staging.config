server {

    server_name staging.dalgo.in;

    location / {
        proxy_pass http://localhost:3000;
        include proxy_params;
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/staging.dalgo.in/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/staging.dalgo.in/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

server {

    server_name staging-api.dalgo.in;

    location /wss/ {
        proxy_pass http://localhost:8002;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        include proxy_params;
    }

    location / {
        proxy_pass http://localhost:8002;
        include proxy_params;
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/staging-api.dalgo.in/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/staging-api.dalgo.in/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

server {
    if ($host = staging.dalgo.in) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

    server_name staging.dalgo.in;
    listen 80;
    return 404; # managed by Certbot
}

server {
    if ($host = staging-api.dalgo.in) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

    server_name staging-api.dalgo.in;
    listen 80;
    return 404; # managed by Certbot
}

